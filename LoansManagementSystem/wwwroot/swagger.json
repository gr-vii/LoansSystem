        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/SignInRequest"
          },
          "examples": {
            "AdminSignIn": {
              "summary": "Administrator Sign In",
              "value": {
                "PhoneNumber": "exampleadmin",
                "Password": "examplepassword"
              }
            }
